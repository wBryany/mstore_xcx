/* pages/assign_train_time/index.wxss */
.head_wrap{
  margin: 0 auto;
  width: 100%;
  background-color: white;
}
.search_wrap{
  margin: 0 20rpx 0 20rpx;
  background-color: white;
}
.search_wrap input{
  margin: 20rpx 0;
  height: 80rpx;
  background-color: lightgrey;
  padding-left: 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}
.remain_wrap{
  margin: 0 auto;
  width: 100%;
  height: 80rpx;
  background-color: #DDE3ED;
  padding: 0 36rpx;
  text-align: left;
}
.remain_wrap text{
  font-size: 32rpx;
  line-height: 80rpx;
}


.input_wrap{
  margin: 0 auto;
  width: 100%;
  background-color: white;
}
.row_wrap{
  margin: 0 36rpx;
  border-bottom: 2rpx solid lightgray;
  height: 120rpx;
  display: flex;
}

.row_wrap view{
  width: 256rpx;
  height: 120rpx;
  text-align: left;
  font-size: 30rpx;
  line-height: 120rpx;
}
.row_wrap input{
  flex: 1;
  margin: 0 0;
  height: 120rpx;
  text-align: right;
  font-size: 30rpx;
  line-height: 120rpx;
}





.btn_wrap{
  position: fixed;
  bottom: 40rpx;
  left: 36rpx;
  right: 36rpx;
}
.btn_wrap button{
  margin: 0 auto;
  height: 88rpx;
  background-color: #4990E2;
  color: white;
  font-size: 32rpx;
  line-height: 88rpx;
}