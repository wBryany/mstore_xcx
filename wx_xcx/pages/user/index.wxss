.common_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: white;
}

.search_widget {
  width: 100%;
  display: flex;
  height: 100rpx;
  flex-direction: row;
  margin: 20rpx;
  align-items: center;
}

.search_input {
  width: 70%;
  height: 72rpx;
  background: #f9f9f9;
  margin-left: 20rpx;
  border-radius: 20rpx;
  display: flex;
  padding-left: 20rpx;
    font-size: 32rpx;
  color: #333333;
}

.btn_search {
  width: 20%;

  font-size:32rpx;
  color: white;
  background: #2f8af4;
}

.place_class {
 padding-left: 40rpx;
  font-size: 30rpx;
  color:#999999
}

.new_user {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  /* background: red; */
  height: 100rpx;
  border:6rpx dashed #4185de;
}

.sc_view {
  margin-top: 40rpx;
  width: 100%;
  min-height: 20rpx;
}

.user_list_item {
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;

  flex-direction: row;

  border-bottom: 2rpx solid #e4e4e4;
}

.header {
  height: 120rpx;
  width: 120rpx;
  border-radius: 60rpx;
  margin-left: 40rpx;
}

.item_info {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */

}

.view_line{
  width: 100%;
  height: 2rpx;
  background: #e4e4e4;
}
.font_style{
  font-size: 32rpx;
}
.time_style{
  color: #999999;
}
.nickname_style{
  color: #333333;
}
.login_name_style{
  display: flex;
  flex-direction: row;
}
.common_color{
   color:#4a90e2;
}
.common_margintop{
  margin-top: 8rpx;
}