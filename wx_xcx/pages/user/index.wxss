.common_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: white;
}

.search_widget {
  width: 100%;
  display: flex;
  height: 100rpx;
  flex-direction: row;
  margin: 20rpx;
  align-items: center;
}

.search_input {
  width: 70%;
  height: 72rpx;
  background: #e4e4e4;
  margin-left: 20rpx;
  border-radius: 20rpx;
  display: flex;
  padding-left: 20rpx;
}

.btn_search {
  width: 20%;
  height: 60rpx;
  font-size:24rpx;
  color: white;
  background: #4185de;
}

.place_class {
  padding-left: 40rpx;
}

.new_user {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  /* background: red; */
  height: 100rpx;
  border:6rpx dashed #4185de;
}

.sc_view {
  margin-top: 40rpx;
  width: 100%;
  min-height: 20rpx;
}

.user_list_item {
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;

  flex-direction: row;

  border-bottom: 2rpx solid #e4e4e4;
}

.header {
  height: 120rpx;
  width: 120rpx;
  border-radius: 60rpx;
  margin-left: 40rpx;
}

.item_info {
  margin-left: 40px;
  display: flex;
  flex-direction: column;
  /* align-items: center; */

}

.view_line{
  width: 100%;
  height: 2rpx;
  background: #e4e4e4;
}
