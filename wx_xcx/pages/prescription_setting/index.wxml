<!--pages/prescription_setting/index.wxml-->
<view class="wrap">
  <view class="frist_section">
    <view class="train_title">请选择训练项目</view>
    <view class="train_wrap">
      <view class="train_item" wx:for="{{train_items}}" wx:for-index="idx" wx:for-item="item" wx:key="{{item.name}}" bindtap="trainItemAction" data-bindex="{{idx}}">
        <view class="item_title {{item.checked?'item_title_blue':'item_title_black'}}">{{item.name}}</view>
        <view class="item_check_layer" hidden="{{!item.checked}}"></view>
        <image hidden="{{!item.checked}}" src="../../assets/img/train_item_check.png"></image>
      </view>
      <view class="train_item" style="background-color: white;">
      </view>
    </view>
  </view>
  

  <!-- 左眼正片等级 -->
  <view class="l_eye_positive_level" hidden="{{!(item_select_name == 'FlipBeat_d' || item_select_name == 'FlipBeat_l')}}">
    <view class="head_wrap">
      <view class="title">{{item_select.content.params[0].name_cn}}</view>
      <view class="op_title">次数</view>
      <view class="reduce" bindtap="lPositiveDegreeLevelReduce">-</view>
      <view class="times">{{item_select.content.params[2].select.text}}</view>
      <view class="add" bindtap="lPositiveDegreeLevelAdd">+</view>
    </view>
    <view class="body_two_wrap">
      <view class="body_two_item {{(item.text != item_select.content.params[0].select.text) ? 'body_two_item_grey' : 'body_two_item_blue'}}" wx:for="{{item_select.content.params[0].value}}" wx:for-index="idx" wx:for-item="item" wx:key="{{item.text}}" bindtap="lPositiveDegreeLevelAction" data-bindex="{{idx}}" data-selectitem="{{item}}">{{item.text}}</view>
    </view>
  </view>

  <!-- 左眼负片等级 -->
  <view class="l_eye_negative_level" hidden="{{!(item_select_name == 'FlipBeat_d' || item_select_name == 'FlipBeat_l')}}">
