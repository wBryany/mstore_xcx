      <view class="times">{{item_select.content.params[3].select.text}}</view>
      <view class="add" bindtap="lNegativeDegreeLevelAdd">+</view>
    </view>
    <view class="body_three_wrap">
      <view class="body_three_item {{(item.text != item_select.content.params[1].select.text) ? 'body_three_item_grey' : 'body_three_item_blue'}}" wx:for="{{item_select.content.params[1].value}}" wx:for-index="idx" wx:for-item="item" wx:key="{{item.text}}" bindtap="lNegativeDegreeLevelAction" data-bindex="{{idx}}" data-selectitem="{{item}}">{{item.text}}</view>
    </view>
  </view>


