/* pages/prescription_setting/index.wxss */
.wrap{
  margin: 0 auto;
  width: 100%;
}
.frist_section{
  margin: 0 auto;
  width: 100%;
}
.train_title{
  margin: 0 auto;
  width: 100%;
  font-size: 32rpx;
  padding: 0 36rpx;
}
.train_wrap{
  margin-top: 20rpx;
  display: flex;
  width: 100%;
  padding: 0 18rpx 60rpx 18rpx;
  flex-wrap: wrap;
  justify-content:space-around;
  border-bottom: 2rpx solid #f5f5f5;
}
.train_item{
  width: 327rpx;
  height: 88rpx;
  background-color: #f5f5f5;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  position: relative;
}
.item_title{
  width: 100%;
  text-align: center;
  line-height: 88rpx;
}
.item_check_layer{
  position: absolute;
  left: 0;
  top: 0;
  width: 327rpx;
  height: 88rpx;
  border-radius: 8rpx;
  background-color: rgba(74, 144, 226, 0.3);
  z-index: 50;
}
.train_item image{
  width: 56rpx;
  height: 44rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 100;
}
.item_title_black{
  color: black;
}
.item_title_blue{
  color: #4A90E2;
}