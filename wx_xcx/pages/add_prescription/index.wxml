   <view class="divide_line"></view>
    <view class="head_wrap">
      <view>请选择障碍类型</view>
      <image src="{{src}}"></image>

    </view>


  <view class="presc_wrap">

  
    <radio-group bindchange="radioChange">
      <view class="row_wrap" wx:key="key" wx:for="{{mydata}}" wx:for-index="index" wx:for-item="item" data-index="{{index}}">
        <view>{{item.name}}</view>
        <radio class="sel_radio" value="{{item.id}}"></radio>
      </view>
    </radio-group>

  </view>
  <view class="btn_wrap">
    <button bindtap="goPrescDetail">确认添加</button>
  </view>
</view>